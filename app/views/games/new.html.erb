<h1>New Game</h1>



<ul class="list-inline">
  <% @letters.each do |letter| %>

    <li><%= letter.upcase %></li>

  <% end %>
</ul>


<p>What is the longest word you can find?</p>

<form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Type your word" class="form-control">
    <input type="submit" value="Play!" class="btn btn-default">
</form>






